@model ExQuizIt.Models.Game

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create a Quiz</h1>

<h4>Game</h4>
<hr />
<div class="row">
    <div class="col-md-4">
		<form asp-action="CreateNewGame">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="GameId" class="form-control" value="@Model.GameId">
			<div class="form-group">
				<label asp-for="Difficulty" class="control-label"></label>
				<select asp-for="Difficulty" asp-items="@Html.GetEnumSelectList<Game.DifficultyType>()" class="form-control"></select>
				<span asp-validation-for="Difficulty" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Subject" class="control-label"></label>
				<input asp-for="Subject" class="form-control" value=""/>
				<span asp-validation-for="Subject" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="QuestionCount" class="control-label"></label>
				<input asp-for="QuestionCount" class="form-control" value=""/>
				<span asp-validation-for="QuestionCount" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Add Questions"/>
			</div>
		</form>
    </div>
</div>

<div>
    <a asp-action="Games">Back to Games</a>
</div>

